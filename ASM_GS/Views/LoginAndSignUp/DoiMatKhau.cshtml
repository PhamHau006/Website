    <script>
        function changePassword() {
            const email = document.getElementById('Email').value;
            const newPassword = document.getElementById('newpassword').value;
            const renewPassword = document.getElementById('Renewpassword').value;
            const statusMessage = document.getElementById('statusMessage');
            if (newPassword.length < 6) {
                statusMessage.textContent = 'Mật khẩu mới phải có ít nhất 6 ký tự.';
                return;
            }
            if (newPassword !== renewPassword) {
                statusMessage.textContent = 'Mật khẩu mới và nhập lại mật khẩu không trùng khớp.';
                return;
            }
            $.ajax({
                url: '/LoginAndSignUp/UpdatePassword', 
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({ email: email, newPassword: newPassword }),
                success: function (response) {
                    if (response.success) {
                        alert("Đổi mật khẩu thành công, bạn sẽ trở lại trang đăng nhập")
                        location.href="Index"
                    } else {
                        statusMessage.textContent = response.message;
                    }
                },
                error: function () {
                    statusMessage.textContent = 'Có lỗi xảy ra. Vui lòng thử lại.';
                }
            });
        }

    </script>
