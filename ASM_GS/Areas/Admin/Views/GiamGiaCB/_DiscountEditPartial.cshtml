@model ASM_GS.Models.GiamGia
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="modal-header">
    <h5 class="modal-title">Chỉnh Sửa Giảm Giá: @Model.TenGiamGia</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="MaGiamGia" />
        <div class="mb-3">
            <label asp-for="TenGiamGia" class="form-label"></label>
            <input asp-for="TenGiamGia" class="form-control" />
            <span asp-validation-for="TenGiamGia" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="GiaTri" class="form-label"></label>
            <input asp-for="GiaTri" class="form-control" />
            <span asp-validation-for="GiaTri" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="NgayBatDau" class="form-label"></label>
            <input asp-for="NgayBatDau" class="form-control" type="date" />
            <span asp-validation-for="NgayBatDau" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="NgayKetThuc" class="form-label"></label>
            <input asp-for="NgayKetThuc" class="form-control" type="date" />
            <span asp-validation-for="NgayKetThuc" class="text-danger"></span>
        </div>
        <!-- Thêm trường cho Số Lượng Mã Nhập Tối Đa -->
        <div class="form-group">
            <label asp-for="SoLuongMaNhapToiDa">Số lượng mã nhập tối đa</label>
            <input asp-for="SoLuongMaNhapToiDa" class="form-control" type="number" min="1" required />
            <span asp-validation-for="SoLuongMaNhapToiDa" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="TrangThai" class="form-label"></label>
            <select asp-for="TrangThai" class="form-control">
                <option value="1">Đang Áp Dụng</option>
                <option value="0">Không Áp Dụng</option>
            </select>
            <span asp-validation-for="TrangThai" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Cập Nhật</button>
    </form>
</div>
<script>
    // Ghi đè thông báo lỗi mặc định của jQuery Validation bằng tiếng Việt
    jQuery.extend(jQuery.validator.messages, {
        range: "Vui lòng nhập giá trị lớn hơn hoặc bằng {0}."
    });
</script>
