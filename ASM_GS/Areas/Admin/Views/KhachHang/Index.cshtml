@model X.PagedList.IPagedList<ASM_GS.Models.KhachHang>
@using X.PagedList.Mvc.Core
@{
    ViewBag.Title = "Danh Sách Khách Hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
