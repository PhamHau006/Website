@model dynamic
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hóa đơn - @Model.MaHoaDon</title>
    <style>
        body {
            font-family: 'Times New Roman', Times, serif;
            font-size: 15px;
            margin: 20px;
            line-height: 1.5;
        }
        .header {
            text-align: center;
            margin-bottom: 20px;
        }
        .header .company-info {
            font-size: 15px;
            margin-bottom: 5px;
        }
        .header .invoice-title {
            font-size: 20px;
            font-weight: bold;
            color: red;
            text-transform: uppercase;
        }
        .customer-info, .product-table, .total-section, .footer {
            width: 100%;
            margin-bottom: 20px;
        }
        .customer-info table {
            width: 100%;
            border-collapse: collapse;
        }
        .customer-info td {
            padding: 5px;
        }
        .product-table table {
            width: 100%;
            border-collapse: collapse;
        }
        .product-table th, .product-table td {
            border: 1px solid black;
            text-align: center;
            padding: 8px;
            word-break: break-word;
        }
        .product-table th {
            background-color: #f2f2f2;
            font-weight: bold;
        }
        .total-section {
            text-align: right;
            font-weight: bold;
        }
        .footer {
            display: flex;
            justify-content: space-between;
            font-size: 15px;
        }
        .footer p {
            text-align: left;
        }
        .footer .signature {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="header">
        <div class="company-info">
            <p><strong>Tuấn Oanh</strong></p>
            <p><strong>Chuyên:</strong> Máy lọc nước R/O công nghệ USA</p>
            <p><strong>DC:</strong> Khu Giếng Bìm - HB - TT - HN</p>
            <p><strong>DT:</strong> 0936.086612 - <strong>KT:</strong> 0904.990.266</p>
        </div>
        <div class="invoice-title"><strong>HÓA ĐƠN BÁN HÀNG</strong></div>
        <p><strong>Mua - Bán - Sửa Chữa</strong></p>
        <p><strong>Bảo hành các loại máy lọc nước</strong></p>
    </div>

    <div class="customer-info">
        <table>
            <tr>
                <td><strong>Tên khách hàng:</strong></td>
                <td>@Model.KhachHang</td>
            </tr>
            <tr>
                <td><strong>Địa chỉ:</strong></td>
                <td>@Model.DiaChi</td>
            </tr>
            <tr>
                <td><strong>Ngày:</strong></td>
                <td>@Model.NgayXuatHoaDon.ToString("dd/MM/yyyy")</td>
            </tr>
        </table>
    </div>

    <div class="product-table">
        <table>
            <thead>
                <tr>
                    <th><strong>TT</strong></th>
                    <th><strong>Tên hàng</strong></th>
                    <th><strong>Số lượng</strong></th>
                    <th><strong>Đơn giá (VND)</strong></th>
                    <th><strong>Thành tiền (VND)</strong></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var sp in Model.SanPhams)
                {
                        <tr>
                            <td>@sp.STT</td>
                            <td>@sp.TenSanPham</td>
                            <td>@sp.SoLuong</td>
                            <td>@sp.Gia.ToString("N0")</td>
                            <td>@sp.ThanhTien.ToString("N0")</td>
                        </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="total-section">
        <p><strong>Tổng cộng:</strong> @Model.TongTien.ToString("N0") VND</p>
        <p><strong>Số tiền viết bằng chữ:</strong> @Model.TongTienBangChu</p>
    </div>

    <div class="footer">
        <div class="signature">
            <p><strong>Khách hàng</strong></p>
            <p>__________________________</p>
        </div>
        <div class="signature">
            <p><strong>Người bán hàng</strong></p>
            <p>__________________________</p>
        </div>
    </div>
</body>
</html>
