    <!-- Form tìm kiếm -->
    <form id="searchForm" asp-action="Index" method="get" class="form-inline d-flex align-items-center">
        <!-- Form tìm kiếm -->
        <input type="text" id="searchInput" name="searchTerm" value="@ViewBag.SearchTerm"
               placeholder="Tìm kiếm khách hàng..."
