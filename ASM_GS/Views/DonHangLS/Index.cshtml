@model IEnumerable<ASM_GS.ViewModels.DonHang_LSViewModel>
@{
    Layout = "~/Views/Shared/_LayoutPhu.cshtml";
}
<div style="margin-top: 50px; margin-left: 50px; margin-right:50px">
    <h1 class="page-title">Lịch sử đơn hàng</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Mã Hóa Đơn</th>
                <th>Tên Khách Hàng</th>
                <th>Ngày Xuất</th>
                <th>Tổng Tiền</th>
                <th>Trạng Thái</th>
                <th>Chi tiết đơn hàng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.MaHoaDon</td>
                    <td>@order.TenKhachHang</td>
                    <td>@order.NgayXuatHoaDon</td>
                    <td>@order.TongTien.ToString("N0") VNĐ</td>

                    <td>
                        @if (order.TrangThai == 0)
                        {
                            <span class="status pending">Đang xử lý</span>
                        }
                        else if (order.TrangThai == 1)
                        {
                            <span class="status in-progress">Đang giao</span>
                        }
                        else if (order.TrangThai == 2)
                        {
                            <span class="status completed">Đã giao</span>
                        }
                    </td>
                    <td>
                        <a class="btn btn-info" href="@Url.Action("Details", "DonHangLS", new { id = order.MaHoaDon })">Xem chi tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Add your custom CSS -->
<style>
    /* General Styles */
    .page-title {
        font-size: 1.8rem;
        font-weight: bold;
        text-align: center;
        margin-bottom: 20px;
    }

    /* Table Styles */
    .table {
        width: 100%;
        margin: 0 auto;
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 12px;
            text-align: left;
            font-size: 1rem;
            border: 1px solid #ddd;
        }

    /* Trạng thái đơn hàng */
    .status {
        padding: 5px 10px;
        border-radius: 5px;
        font-weight: normal;
    }

        .status.pending {
            background-color: #FFEB3B; /* Màu vàng */
        }

        .status.in-progress {
            background-color: #03A9F4; /* Màu xanh dương */
        }

        .status.completed {
            background-color: #8BC34A; /* Màu xanh lá cây */
        }

    /* Button Styles */
    .btn-info {
        padding: 8px 15px;
        border-radius: 5px;
        text-decoration: none;
        background-color: #17a2b8;
        color: white;
    }

        .btn-info:hover {
            background-color: #138496;
            color: white;
        }
</style>
