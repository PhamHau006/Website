        const data = {
            tenTaiKhoan: $("#TenTaiKhoan2").val(),
            matKhau: $("#MatKhau2").val(),
            reEnterMatKhau: $("#ReEnterMatKhau2").val(),
            email: $("#Email2").val(),
            tenKhachHang: $("#TenKhachHang2").val(),
            soDienThoai: $("#SoDienThoai2").val(),
            diaChi: $("#DiaChi2").val(),
            cccd: $("#Cccd2").val(),
            ngaySinh: $("#NgaySinh2").val(),
            gioiTinh: $("#GioiTinh2").val() === "true" 
        };

        $.ajax({
            url: "/Admin/TaiKhoan/ValidateAndAddAccountCustomer",
            type: "POST",
            data: data,
            success: function (response) {
                if (response.success) {
                    Swal.fire({
                        icon: "success",
                        title: "Thành công!",
                        text: "Tài khoản và khách hàng đã được tạo thành công.",
                        confirmButtonText: "OK"
                    }).then(() => {
                        location.reload();
                    });
