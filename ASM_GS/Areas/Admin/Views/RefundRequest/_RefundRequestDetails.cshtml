@model ASM_GS.Models.RefundRequest

@{
    ViewData["Title"] = "Chi tiết yêu cầu hoàn trả";
}

<div class="container mt-5">
    <h2 class="mb-4">Chi tiết yêu cầu hoàn trả</h2>
    
    <!-- Card cho thông tin hoàn trả -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="card-title mb-0">Thông tin yêu cầu hoàn trả</h5>
        </div>
        <div class="card-body">
            <p><strong>Mã đơn hàng:</strong> @Model.MaDonHang</p>
            <p><strong>Lý do hoàn trả:</strong> @Model.LyDo</p>
            <p><strong>Ngày tạo:</strong> @Model.NgayTao.ToShortDateString()</p>
            <p><strong>Trạng thái:</strong> @Model.TrangThai</p>
        </div>
    </div>
    
 
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
