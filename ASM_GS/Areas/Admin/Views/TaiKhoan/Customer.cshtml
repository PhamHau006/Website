                    else if (response.trangThai == 0)
                        $('#TrangThai').val("Ngừng hoạt động")
                    else
                        $('#TrangThai').val("Đang Thiếu thông tin")
                    $('#myModal').modal('show');
                } else {
                    alert('Customer details not found!');
                }
            },
            error: function () {
                alert('Failed to load customer details.');
            }
        });
    }
    function updateAccount() {
        const maTaiKhoan = $('#MaTaiKhoan').val();
        const matKhau = $('#MatKhau').val();
        const email = $('#Email').val();

        $('#errorMatKhau').text('');
        $('#errorEmail').text('');

        $.ajax({
            url: '/Admin/TaiKhoan/UpdateAccountCustomer', 
            type: 'POST',
            data: {
                MaTaiKhoan: maTaiKhoan,
                MatKhau: matKhau,
                Email: email
            },
            success: function (response) {
                if (response.success) {
                    // Đóng modal
                    $('#myModal').modal('hide');
                    $('.modal-backdrop').remove();
                    // Hiển thị thông báo SweetAlert
                    Swal.fire({
                        icon: 'success',
                        title: 'Thành công',
                        text: 'Thay đổi thông tin tài khoản thành công!',
                        timer: 2000,
                        showConfirmButton: false
                    });
                } else {
                    // Hiển thị lỗi
                    if (response.errors) {
                        if (response.errors.matKhau) {
                            $('#errorMatKhau').text(response.errors.matKhau);
                        }
                        if (response.errors.email) {
                            $('#errorEmail').text(response.errors.email);
                        }
                    }
                }
            },
            error: function () {
                Swal.fire({
                    icon: 'error',
                    title: 'Lỗi',
                    text: 'Đã xảy ra lỗi trong quá trình cập nhật!',
                });
            }
        });
    }
    function deleteAccount(maTaiKhoan) {
        Swal.fire({
            title: 'Bạn có chắc chắn muốn xóa tài khoản này?',
            text: "Hành động này sẽ chuyển trạng thái tài khoản thành ngừng hoạt động.",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Xóa',
            cancelButtonText: 'Hủy'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '/Admin/TaiKhoan/DisableAccountCustomer', 
                    type: 'POST',
                    data: { maTaiKhoan: maTaiKhoan },
                    success: function (response) {
                        if (response.success) {
                            Swal.fire({
                                title: 'Thành công!',
                                text: response.message,
                                icon: 'success',
                                timer: 2000,
                                showConfirmButton: false
                            }).then(() => {
                                location.reload();
                            });
                        } else {
                            Swal.fire({
                                title: 'Lỗi!',
                                text: response.message,
                                icon: 'error',
                                timer: 2000,
                                showConfirmButton: false
                            });
                        }
                    },
                    error: function () {
                        Swal.fire({
                            title: 'Lỗi!',
                            text: 'Không thể xóa tài khoản.',
                            icon: 'error',
                            timer: 2000,
                            showConfirmButton: false
                        });
                    }
                });
            }
        });
    }
    function enableAccount(maTaiKhoan) {
        Swal.fire({
            title: 'Bạn có chắc chắn?',
            text: "Tài khoản sẽ được tái kích hoạt!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Đồng ý',
            cancelButtonText: 'Hủy'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '/Admin/TaiKhoan/EnableAccountCustomer', 
                    type: 'POST',
                    data: { maTaiKhoan: maTaiKhoan },
                    success: function (response) {
                        if (response.success) {
                            Swal.fire({
                                title: 'Thành công!',
                                text: response.message,
                                icon: 'success',
                                timer: 2000,
                                showConfirmButton: false
                            });

                            setTimeout(() => location.reload(), 2000);
                        } else {
                            Swal.fire({
                                title: 'Lỗi!',
                                text: response.message,
                                icon: 'error',
                                confirmButtonText: 'Đóng'
                            });
                        }
                    },
                    error: function () {
                        Swal.fire({
                            title: 'Lỗi!',
